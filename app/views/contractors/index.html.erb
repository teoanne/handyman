<div class="container">
<h1>All contractors</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Address</th>
      <th>User Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contractors.each do |contractor| %>
      <tr>
          <td><%= image_tag contractor.image.url(:thumb) %></td>
          <td><%= contractor.name %></td>
          <td><%= contractor.address %></td>
          <td><%= contractor.user.email if contractor.user %></td>
          <td><%= link_to 'Show', contractor %></td>
        <% if contractor.user == current_user %>
          <td><%= link_to 'Edit', edit_contractor_path(contractor) %></td>
          <td><%= link_to 'Destroy', contractor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Contractor', new_contractor_path %>
<% end %>
</div>
